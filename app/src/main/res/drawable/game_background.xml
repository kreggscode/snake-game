<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Dark gradient background -->
    <item>
        <shape>
            <gradient
                android:angle="90"
                android:centerColor="@color/background_medium"
                android:endColor="@color/background_dark"
                android:startColor="@color/background_light"
                android:type="linear" />
        </shape>
    </item>
    <!-- Neon grid pattern overlay -->
    <item android:top="10dp" android:left="10dp" android:right="10dp" android:bottom="10dp">
        <shape>
            <stroke android:width="1dp" android:color="@color/grid_glow" android:dashWidth="2dp" android:dashGap="8dp"/>
            <corners android:radius="4dp"/>
        </shape>
    </item>
</layer-list>
