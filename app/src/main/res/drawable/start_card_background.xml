<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Outer glow -->
    <item>
        <shape>
            <gradient
                android:angle="135"
                android:startColor="@color/primary"
                android:endColor="@color/accent"
                android:type="radial" />
            <corners android:radius="24dp" />
        </shape>
    </item>
    <!-- Middle glow -->
    <item android:left="4dp" android:top="4dp" android:right="4dp" android:bottom="4dp">
        <shape>
            <solid android:color="@color/card_glow" />
            <corners android:radius="20dp" />
        </shape>
    </item>
    <!-- Inner card -->
    <item android:left="8dp" android:top="8dp" android:right="8dp" android:bottom="8dp">
        <shape>
            <gradient
                android:angle="90"
                android:startColor="@color/card_background"
                android:endColor="@color/background_dark"
                android:type="linear" />
            <corners android:radius="16dp" />
            <stroke android:width="2dp" android:color="@color/control_border" />
        </shape>
    </item>
</layer-list>
