<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Outer glow -->
    <item>
        <shape>
            <gradient
                android:angle="45"
                android:startColor="@color/accent"
                android:endColor="@color/accent_dark"
                android:type="radial" />
            <corners android:radius="20dp" />
        </shape>
    </item>
    <!-- Inner card -->
    <item android:left="3dp" android:top="3dp" android:right="3dp" android:bottom="3dp">
        <shape>
            <gradient
                android:angle="90"
                android:startColor="@color/card_background"
                android:endColor="@color/background_medium"
                android:type="linear" />
            <corners android:radius="17dp" />
            <stroke android:width="2dp" android:color="@color/accent" />
        </shape>
    </item>
</layer-list>
