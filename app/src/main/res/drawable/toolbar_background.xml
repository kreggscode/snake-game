<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Gradient background -->
    <item>
        <shape>
            <gradient
                android:angle="90"
                android:startColor="@color/background_medium"
                android:endColor="@color/card_background"
                android:type="linear" />
        </shape>
    </item>
    <!-- Bottom border -->
    <item android:bottom="2dp">
        <shape>
            <solid android:color="@color/control_border" />
        </shape>
    </item>
</layer-list>
