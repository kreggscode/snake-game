<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Outer glow -->
    <item>
        <shape>
            <solid android:color="@color/card_glow" />
            <corners android:radius="16dp" />
        </shape>
    </item>
    <!-- Inner panel -->
    <item android:left="2dp" android:top="2dp" android:right="2dp" android:bottom="2dp">
        <shape>
            <solid android:color="@color/background_medium" />
            <corners android:radius="14dp" />
            <stroke android:width="1dp" android:color="@color/control_border" />
        </shape>
    </item>
</layer-list>
