<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Outer glow -->
    <item>
        <shape>
            <solid android:color="@color/card_glow" />
            <corners android:radius="12dp" />
        </shape>
    </item>
    <!-- Inner panel -->
    <item android:left="2dp" android:top="2dp" android:right="2dp" android:bottom="2dp">
        <shape>
            <gradient
                android:angle="90"
                android:startColor="@color/card_background"
                android:endColor="@color/background_medium"
                android:type="linear" />
            <corners android:radius="10dp" />
            <stroke android:width="1dp" android:color="@color/control_border" />
        </shape>
    </item>
</layer-list>
